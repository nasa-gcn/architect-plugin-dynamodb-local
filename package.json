{
  "name": "@nasa-gcn/architect-plugin-dynamodb-local",
  "description": "Architect plugin for a local dynamodb instance",
  "version": "0.0.8",
  "repository": {
    "type": "git",
    "url": "github:nasa-gcn/architect-plugin-dynamodb-local"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Dakota Dutko",
      "email": "dakota.c.dutko@nasa.gov"
    }
  ],
  "type": "module",
  "files": [
    "index.js"
  ],
  "scripts": {
    "prepare:husky": "husky",
    "prepare:esbuild": "esbuild index.ts __tests__/test.ts --bundle --packages=external --outdir=. --platform=node --format=esm --tree-shaking=true",
    "prepare": "run-p prepare:*",
    "test": "node --test"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@architect/utils": "^4.0.6",
    "@aws-sdk/client-dynamodb": "^3.731.1",
    "@aws-sdk/client-dynamodb-streams": "^3.731.1",
    "@aws-sdk/client-ssm": "^3.731.1",
    "@aws-sdk/lib-dynamodb": "^3.731.1",
    "@nasa-gcn/architect-plugin-utils": "^0.4.0",
    "lodash": "^4.17.21",
    "ts-dedent": "^2.2.0"
  },
  "devDependencies": {
    "@architect/architect": "^11.2.2",
    "@architect/functions": "^8.1.9",
    "@aws-lite/apigatewaymanagementapi-types": "^0.0.13",
    "@aws-lite/dynamodb-types": "^0.3.11",
    "@aws-lite/sns-types": "^0.0.10",
    "@aws-lite/sqs-types": "^0.2.6",
    "@aws-sdk/util-dynamodb": "^3.731.1",
    "@nasa-gcn/eslint-config-gitignore": "^0.0.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@tsconfig/node20": "^20.1.5",
    "@types/architect__utils": "^4.0.0",
    "@types/aws-lambda": "^8.10.147",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^9.1.0",
    "execa": "^9.5.2",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "@architect/sandbox": "github:architect/sandbox"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  },
  "eslintConfig": {
    "env": {
      "es2019": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@nasa-gcn/eslint-config-gitignore",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.ts",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
